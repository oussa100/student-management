pipeline {
    agent any
    
    tools {
        maven 'M2_HOME'
        jdk 'JAVA_HOME'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/oussa100/student-management'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }
        
        stage('Archive JAR') {
            steps {
                archiveArtifacts 'target/*.jar'
                
                // SOLUTION ALTERNATIVE SANS findFiles
                script {
                    // MÃ©thode 1: Utiliser sh pour lister les fichiers
                    def jarList = sh(
                        script: 'find target -name "*.jar" -type f | wc -l',
                        returnStdout: true
                    ).trim()
                    
                    echo "ğŸ‰ JAR GÃ‰NÃ‰RÃ‰ : ${jarList} fichier(s)"
                    
                    // MÃ©thode 2: Lister les fichiers avec ls
                    def jarFiles = sh(
                        script: 'ls -la target/*.jar 2>/dev/null || echo "Aucun JAR trouvÃ©"',
                        returnStdout: true
                    ).trim()
                    
                    echo "ğŸ“¦ Fichiers JAR :"
                    echo "${jarFiles}"
                    
                    // MÃ©thode 3: Alternative Groovy native
                    def files = findFiles(glob: 'target/*.jar')
                    if (files) {
                        files.each { file ->
                            echo "ğŸ“¦ ${file.name} (${file.length()} bytes)"
                        }
                    } else {
                        echo "âŒ Aucun fichier JAR trouvÃ© dans target/"
                    }
                }
            }
        }
    }
    
    post {
        success {
            echo 'ğŸš€ SUCCÃˆS ! Votre application Spring Boot est construite.'
            echo 'ğŸ“¦ Le JAR est disponible dans "Artifacts du build"'
        }
        failure {
            echo 'âŒ Ã‰chec - VÃ©rifiez la configuration'
        }
    }
}
